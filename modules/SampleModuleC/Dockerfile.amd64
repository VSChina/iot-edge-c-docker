FROM ubuntu:xenial AS base

RUN apt-get update && apt-get install -y --no-install-recommends software-properties-common
RUN add-apt-repository -y ppa:aziotsdklinux/azureiot-preview
RUN apt-get update && apt-get install -y azure-iot-sdk-c-dev=0.2.0.0-6xenial

FROM base AS build-env 

RUN apt-get update && apt-get install -y --no-install-recommends cmake gcc g++ make
COPY . /app
RUN mkdir cmake
WORKDIR /app/cmake
RUN ls /app
RUN cmake -DCMAKE_BUILD_TYPE=Debug .. 
RUN make

FROM base
WORKDIR /app
COPY --from=build-env /app/cmake ./

CMD ["/app/start.sh"]

